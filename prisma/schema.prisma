
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  name              String
  password          String
  role              String   @default("USER")
  refreshTokenHash  String?  // stocker le hash du refresh token pour l'invalidation
  createdAt         DateTime @default(now())
}
